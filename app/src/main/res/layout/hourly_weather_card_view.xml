<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hourly_weather_temperature_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:fontFamily="@font/gothic_a1_medium"
        android:text="@string/hourly_weather_temperature"/>

    <ImageView
        android:id="@+id/hourly_weather_image_view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitCenter"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="#6bb5f4" />

    <TextView
        android:id="@+id/hourly_weather_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/gothic_a1_medium"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="@string/time"/>

</LinearLayout>